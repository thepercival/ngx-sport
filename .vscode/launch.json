{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--require",
                "${workspaceFolder}/test/hook.js",
                "--colors",
                "--recursive",
                "${workspaceFolder}/test/cases/**/*.ts"
            ],
            "env": {
                "NODE_ENV": "development",
            },
            "internalConsoleOptions": "openOnSessionStart",
            "mo"
        }
    ]
}