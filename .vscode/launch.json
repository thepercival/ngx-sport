{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "tsc",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "--require",
                "ts-node/esm",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "--recursive",
                "${workspaceFolder}/test/cases/ranking/calculator/*.js"
            ],
            "env": {
                "TS_NODE_PROJECT": "tsconfig-test.json",
                "NODE_ENV": "development",
            },
            "internalConsoleOptions": "openOnSessionStart"
        },
