{
    "compilerOptions": {
        "declaration": true,
        "module": "es2015",
        "target": "es2015",
        "baseUrl": "./tmp",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "./tmp/esm2015",
        "rootDir": "./tmp",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "files": [
        "./tmp/public_api.ts"
    ],
    "angularCompilerOptions": {
        "enableIvy": true,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "flatModuleOutFile": "ngx-sport.js",
        "flatModuleId": "ngx-sport"
    }
}